# OpenAI API configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Enable mock responses (set to true when API is unavailable)
USE_MOCK_RESPONSES=false

# Server configuration
PORT=3000

# MongoDB configuration (if used)
MONGODB_URI=

# Cloudinary configuration (if used)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Local Filesystem Paths (for local development)
# On Railway, set these to your persistent volume paths, e.g., /data/uploads
UPLOADS_PATH=./uploads
SUBMISSIONS_PATH=./submissions

# AWS S3 Configuration (if used)
AWS_REGION=
S3_BUCKET_NAME=
